<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/styles.css">
    <title>{{ title }}</title>
  </head>

  <body {% if bodyClass %}class="{{ bodyClass }}"{% endif %}>
  <div id="particles-js"> </div>

    <div class="container">
      {% include "header.njk" %}
      {{ content | safe }}
      {% include "footer.njk" %}
    </div>
    <script src="/assets/particles.min.js"></script>
    {% set js %}
      {% include "js/core.js" %}
      {% include "js/hello.js" %}
    {% endset %}
    <script>{{ js | jsmin | safe }}</script>
    {% set particles %}
      {% include "js/particles.app.js" %}
    {% endset %}
    <script>
      {{ particles | jsmin | safe }}
    </script>
  </body>
</html>





